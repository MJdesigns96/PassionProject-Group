<div class="row mb-2">
    <section class="hero">
        <div class="hero-content">
            <h2>Welcome to the Musical Card Collection</h2>
            <p>Discover and collect your favourite cards. Match them with music from the Music Archive!</p>
        </div>
    </section>
</div>
@* admin login: admin@test.ca password: Admin!1234 *@
<div class="row mb-2">
    <div class="col-6">
        <h3 class="mb-3"><span><a href="/AlbumsPage">Albums</a></span> for the Cards</h3>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="table-primary table-responsive">
                    <th>Title</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var album in Model.Albums)
                {
                    <tr>
                        <td>@album.AlbumTitle</td>
                        <td>@album.Genre</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-6">
        <h3 class="mb-3"><span><a href="/CardsPage/List">Cards</a></span> for the Albums</h3>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="table-primary table-responsive">
                    <th>Card</th>
                    <th>Artist</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var card in Model.Cards)
                {
                    <tr>
                        <td>@card.CardName</td>
                        <td>@card.Artist</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
