@model PassionProject.Models.AlbumArtist;

<h1>Delete Artist</h1>

<h3>Are you sure you want to delete this artist?</h3>
<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.AlbumArtistName
        </dd>
        <dt class="col-sm-2">
            Artist Bio
        </dt>
        <dd class="col-sm-10">
            @Model.AlbumArtistBio
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AlbumArtistId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>