@model PassionProject.Models.CardAlbum

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>CardAlbum</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Card</dt>
        <dd class="col-sm-10">@Model.Card?.CardName</dd>

        <dt class="col-sm-2">Album</dt>
        <dd class="col-sm-10">@Model.Album?.AlbumTitle</dd>

        <dt class="col-sm-2">YouTube Video</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrWhiteSpace(Model.YoutubeEmbedUrl))
            {
                <iframe width="560"
                    height="315"
                    src="@Model.YoutubeEmbedUrl"
                    frameborder="0"
                    allowfullscreen>
                </iframe>
            }
            else
            {
                <p>No video available.</p>
            }
            </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>