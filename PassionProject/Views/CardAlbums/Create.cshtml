@model PassionProject.Models.CardAlbum

@{
    ViewData["Title"] = "Create Card-Album Relationship";
}

<h1>@ViewData["Title"]</h1>

<h3>Create New Card-Album Relationship</h3>
<hr />

<form method="post" asp-action="Create">
    <div class="form-group">
        <label for="CardId">Card</label>
        <select id="CardId" name="CardId" class="form-control" asp-for="CardId">
            <option value="">Select a Card</option>
            @foreach (var card in ViewData["CardId"] as SelectList)
            {
                <option value="@card.Value">@card.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="AlbumId">Album</label>
        <select id="AlbumId" name="AlbumId" class="form-control" asp-for="AlbumId">
            <option value="">Select an Album</option>
            @foreach (var album in ViewData["AlbumId"] as SelectList)
            {
                <option value="@album.Value">@album.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a href="/CardAlbums/Index" class="btn btn-secondary">Back to List</a>
</form>